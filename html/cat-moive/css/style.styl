*
  margin 0
  padding 0

#toast
  display none

.movie
  width 100%
  &-head //&代表movie,继承
    width 100%
    height 40px
    line-height 40px
    background #1e2025
    color #fff
    padding 0 10px // 上0 右10 下0 左10
    box-sizing  border-box
    display flex
    .iconfont
      width 16px
    .title
      flex 1
      text-align center
  &-info
    width 100%
    background-color #1e2025
    padding 15px
    box-sizing border-box//让盒子的大小把边框都算在内
    &_desc
      width 100%
      display flex
      .info-pic
        width 122px
        height 165px
        overflow hidden
        img
          width 100%
      .info-container
        flex 1
        color #fff
        font-size 12px
        margin-left 10px
        .name
          font-size 24px
          font-family Arial,sans-serif
          font-weight normal
        .en-name
          color #9b9da2
          font-size 14px
        .like
          padding 5px 10px
          background linear-gradient(to right, #9b9da2,transparent)
          border-radius 10px
          margin 10px 0
          .iconfont
            display inline-block // 行内块级
            transform:rotate(-30deg)
            color #fcf7bb
            margin-right 5px
        .type,.play-time
          color #9b9da2
        .btn-wrap
          display flex
          margin-top 10px
          .flex 
            flex 1
            text-align center
            height 32px
            line-height 32px
            background-color #58585b
            border-radius 4px
            &:first-child
              margin-right 10px
            .iconfont
              font-size 14px
    &_rate
      background-color #000
      padding 10px
      border-radius 4px
      margin-top 15px
      .rate-title
        display flex
        font-size 12px
        justify-content space-between
        &__left
          color #fff
          .icon-maoyan
            color red
        &__right
          color #886a5b
      .rate-detail
        display flex
        &__left
          flex 454
          display flex 
          .grade
            text-align center
            h2
              color #f7af00
            p
              color #77594a
          .star
            li
              display flex //变成弹性容器
              align-items center //上下居中，弹性容器独有
              margin-left 10px
              height 13px
              //在这使星星和行 对齐
              .star-num1
                //间距缩小
                letter-spacing -5px
                color #9d8e82
              .star-num2
                letter-spacing -5px
                color #9d8e82
              .star-num3
                letter-spacing -5px
                color #9d8e82
              .star-num4
                letter-spacing -5px
                color #9d8e82
              .star-num5
                letter-spacing -5px
                color #9d8e82
              .persent
                margin-left 10px  //左外边距
                border-radius 3px   //圆角
                height 7px  //高
                width 100px  //宽
                background-color #886a5b
                overflow hidden //超出部分会被裁剪
                position relative
                display flex
                .persent-val1
                  width 80px
                  background-color #9d8e82
                .persent-val2
                  width 16px
                  background-color #9d8e82
                .persent-val3
                  width 8px
                  background-color #9d8e82
                .persent-val4
                  width 2px
                  background-color #9d8e82
                .persent-val5
                  width 4px
                  background-color #9d8e82



