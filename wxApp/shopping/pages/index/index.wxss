/* pages/index/index.wxss */
swiper{
  height: 421rpx;
  /* 1px=2rpx */
}
.slide-image{
  width: 100%;
  height: 100%;
}

.select-title,
.newest-title{
  text-align: center;
  /* line-height: 30px; */
  padding: 30rpx 0;
  color: #ab956d;
}

.select-top,
.select-bottom{
  width: 100%;
  height: 375rpx;
  display: flex;

}
.select-top__small{
  flex: 1;
}
.select-top__small navigator,
.select-top__small image,
.select-bottom navigator,
.select-bottom image{
  width: 100%;
  height: 100%;
}

.newest-box{
  padding: 0 40rpx;
}
.newest-list{
  display: inline-block;
  width: 325rpx;
  height: 325rpx;
  background: #f5f6f5;
  text-align: center;
  border-radius: 10px;
  margin: 0 20rpx 20rpx 0;
}
.newest-list image{
  width: 175rpx;
  height: 175rpx;
}
.newest-list:nth-child(2n){
  margin-right: 0;
}
