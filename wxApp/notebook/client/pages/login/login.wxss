.star-login{
  /* 手机屏幕高和宽 */
  width: 100vw;
  height: 100vh;
  background-color: #fff;
  padding: 0 96rpx;
  overflow: hidden;
  box-sizing: border-box;
}
.title{
  height: 52px;
  line-height: 52rpx;
  color: rgba(16,16,16,1);
  font-size: 36rpx;
  text-align: center;
  font-family: Arial,Arial, Helvetica, sans-serif;
  margin-top: 40rpx;
}
.login-wrapper{
  width: 558rpx;
  height: 800rpx;
  margin-top: 50rpx;
  border-radius: 10rpx;
  border: 1rpx solid rgbg(187,187,187,1);
  box-shadow: 0 0 40rpx rgba(170, 170, 170, 1);
  overflow: hidden;
}
.avata{
  width: 180rpx;
  height: 180rpx;
  margin: 82rpx auto 58rpx;
  border-radius: 50%;
  overflow: hidden;
}
.avata image{
  width: 100%;
}
.input-group{
  width: 416rpx;
  height: 92rpx;
  line-height: 92rpx;
  display: flex;
  margin: 0 auto;
  border: 1px solid rgba(187, 187, 187, 1);
  border-radius: 40rpx;
  padding-left: 40rpx;
  opacity: 0.5;
  margin-bottom: 10px;
}
label{
  display: inline-flex;
  width: 72rpx;
  color: rgba(16, 16, 16, 1);
  font-size: 28rpx;
  font-family: Arial, Helvetica, sans-serif;
}
input{
  display: inline-block;
  width: 100%;
  height: 100%;
  border-radius: 40rpx;
  padding-left: 10px;
  font-size: 28rpx;
}
.forgot-pwd{
  position: relative;
  left: 70%;
  opacity: 0.5;
}
.sign{
  position: relative;
  top: 40rpx;
  /* padding-left: 130rpx;*/
  /* 水平居中 */
  text-align: center;
  /* 上下居中 */
  /* padding: 18rpx 0; */
  letter-spacing: 10rpx;
  margin: 0 auto;
  /* left: 90rpx; */
  width: 390rpx;
  /* line-height 和 height 值一样可以使其垂直居中 */
  /* line-height: 80rpx; */
  height: 80rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background: rgba(51,54,67,1);
  border-radius: 50rpx;
  color: white;
  font-size: 40rpx;
}
.register{
  display: block;
  position: absolute;
  bottom: 50rpx;
  left: 240rpx;
  opacity: 0.5;
}
