/* pages/noteList/noteList.wxss */
.note-list{
  width: 100vw;
  padding: 80rpx 50rpx 0;
  box-sizing: border-box;
}
.lists{
  display: flex;
  /* 弹性换行 */
  flex-wrap: wrap;
  flex-direction: row;
  justify-content: space-between;
}
.list{
  width: 300rpx;
  margin-bottom: 54rpx;
  overflow: hidden;
}
.img{
  width: 100%;
  height: 300rpx;
}
.img image{
  width: 100%;
  height: 100%;
  border-radius: 20rpx;
}

.time{
  margin-top: 10px;
  margin-bottom: 5px;
  opacity: 0.7;
  color: rgba(16,16,16,1);
  font-size: 28rpx;
  font-family: Arial, Helvetica, sans-serif;
}

.title{
  /* height: 84rpx; */
  line-height: 50rpx;
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  line-clamp: 2;
  -webkit-box-orient: vertical;
  color: rgba(16,16,16,1);
  font-size: 28rpx;
  font-family:Arial, Helvetica, sans-serif;
}