.user-info_container{
  display: flex;
  margin: 0 60rpx;
  margin-top: 64rpx;
}
.user-info_container .avatar{
  width: 200rpx;
  height: 200rpx;
  border: 5px solid #fff;
  border-radius: 50%;
  box-shadow: 0 6rpx 16rpx rgba(25,118,210,0.1);
}
.user-info_container .info{
  margin-left: 60rpx;
}
.info .name{
  color: #1976d2;
  font-weight: bold;
  font-size: 60rpx;
  margin-top: 10rpx;
}
.authorize{
  display: inline-block;
  box-sizing: border-box;
  padding: 12rpx 48rpx;
  border-radius: 36rpx;
  background: #ffee58;
  text-align: center;
  font-weight: bold;
  font-size: 26rpx;
  line-height: 28rpx;
}
.options{
  width: 100vw;
  height: 60vh;
}
