.container{
  width: 100vw;
}
.letter{
  width: 100%;
  text-align: center;
}
.letter text{
  background: #fff;
  width: 100%;
  display: inline-block;
  line-height: 40rpx;
  
}
.letter-detail{
  background:rgba(108, 177, 234, 0.2);
  border-bottom: 5px solid #fff;
  display: flex;
}
.detail-header{
  position: relative;
  display: flex;
  width: 160rpx;
  height: 160rpx;
}
.userPic{
  position: absolute;
  left: 20rpx;
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}
.userPic image{
  width: 138rpx;
  height: 138rpx;
  border-radius: 50%;
}
.createTime1{
  position: absolute;
  bottom: 60rpx;
  font-size: 20rpx;
  left: 200rpx;
  width: 145rpx;
}
.createTime2{
  position: absolute;
  bottom: 20rpx;
  font-size: 20rpx;
  left: 200rpx;
}
.userName{
  position: absolute;
  left: 200rpx;
  font-size: 40rpx;
  top: 18rpx;
}
.content{
  margin-left: 200rpx;
  margin-top: 30rpx;
  text-align: center;
  padding: 20rpx;
  width:40vw;
  height: 100rpx;
  opacity: 0.7;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.letter-delete{
  margin-top: 60rpx;
  width: 100rpx;
  height: 100rpx;
  text-decoration:underline;
}