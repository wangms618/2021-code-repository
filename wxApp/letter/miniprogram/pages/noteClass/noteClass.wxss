/* miniprogram/pages/noteClass/noteClass.wxss */
.container{
  width: 100vw;
}
.container-pic{
  width: 100vw;
  height: 100vh;
  position: fixed;
}
.container-header{
  position: relative;
  width: 100%;
  height: 300rpx;
  font-size: 60rpx;
  font-family: serif;
  font-weight: bold;
  color: aqua;
}
.container-header image{
  margin: 40rpx 20rpx 20rpx 20rpx;
  border: 5px solid white;
  height: 200rpx;
  width: 200rpx;  
  border-radius: 50%;
}
.container-header text{
  position: absolute;
  top: 90rpx;
  left: 300rpx;
}
.container-content{
  width: 98vw;
}
.content-note{
  position: relative;
  background: #fff;
  border-radius: 40rpx 40rpx 0 0;
}
.content{
  margin: 10px;
  background: #fff;
  border-radius: 20rpx;
}
.hot-essay{
  font-weight: bold;
  line-height:80rpx;
  font-size: 36rpx;
  padding: 10rpx 0 0 40rpx;
}
.content-mode{
  border-bottom: 1px solid #e0e0e0;
}
.content-title_pic{
  padding: 10rpx  0 0 40rpx;
}
.content-title_pic image{
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  box-shadow: 0 6rpx 16rpx rgba(25,118,210,0.4);
}
.content-title{
  display: flex;
  margin-top: 40rpx;
}
.content-title_xinxi{
  flex:1;
  position: relative;
}
.xinxi-name{
  display: block;
  position: absolute;
  top: 10rpx;
  left:30rpx;
  font-size: 40rpx;
  font-weight: bold;
}
.xinxi-time{
  position: absolute;
  top: 80rpx;
  left:30rpx;
  opacity: 0.5;
  font-size: 30rpx;
}
.content-text{
  margin: 40rpx 40rpx 20rpx 40rpx;
  opacity: 0.5;
  overflow: hidden;
  text-overflow:ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp:2; 
}
.community{
  display: flex;
  height: 100rpx;
  padding: 40rpx;
  position: relative;
}
.community image{
  width: 50rpx;
  height: 50rpx;
}
.community-thumbs_up{
  position: absolute;
  left: 100rpx;
}
.community-comment{
  position: absolute;
  left: 340rpx;
}
.community-collect{
  position: absolute;
  right: 100rpx;
}
.contentTitle{
  padding: 40rpx 40rpx 0 40rpx;
  font-size: 40rpx;
  font-family:Monospace;
  overflow: hidden;
  text-overflow:ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp:1; 
}
.content-pic{
  /* height: 400rpx;
  margin: 0 40rpx;
  border: 1px solid#e0e0e0;
  border-radius: 30rpx;
  overflow: hidden; */
  display: flex;
}
.content-pic_one{
  height: 400rpx;
  border-radius: 30rpx;
  width: 90%;
  margin:auto;
}
.content-pic_two{
  height: 200rpx;
  width: 200rpx;
  border-radius: 30rpx;
}
.content-pic_two:first-child{
  margin-left: 30rpx;
}
.content-pic_two:nth-child(2){
  margin: 0 30rpx;
}
.comment-reply{
  margin: 50rpx 150rpx 20rpx 20rpx;
  background: #e0e0e0;
  line-height: 60rpx;
  display: flex;
  height: 220rpx;
  border-radius: 30rpx;
  position: relative;
}
.comment-reply_input{
  padding: 20rpx;
  border-radius: 30rpx;
  width: 80vw;
  height: 180rpx;
}
.commentClick{
  width: 70rpx;
  height: 70rpx;
  position: absolute;
  right: 35rpx;
  top: 200rpx;
}
.commentClick image{
  width: 100%;
  height: 100%;
}
.no-content{
  height: 800rpx;
  text-align: center;
  font-size: 40rpx;
}
.no-content_pic{
  width: 100%;
  height: 525rpx;
}
.no-content_text{
  display: inline-block;
  margin-top: 100rpx;
}