/* pages/home/home.wxss */
page{
  height: 100vh;
  background: #eee8e8;
}
.head{
  margin: 20rpx;
  border-radius: 20rpx;
  background: #fff;
}
swiper{
  overflow:hidden;
  border-radius: 20rpx;
  height: 421rpx;
}
.select-page{
  display: inline-block;
  position: relative;
  margin-bottom: 40rpx;
  width: 25%;
  height: 85rpx;
}
.select-page image{
  width: 100%;
  height: 100%;
}
.select{
  height: 150rpx;
  background: #fff;
  margin: 0 20rpx;
  border-radius: 20rpx;
}
.select-sv{
  white-space: nowrap;
  position: relative;
  height: 200rpx;
  padding-top: 20rpx;
  top: 0rpx;
}

.slide-image{
  width: 100%;
  height: 100%;
}
.select-name{
  position: absolute;
  top: 90rpx;
  left: 65rpx;
  color: green;
}
.content{
  margin: 10px;
  background: #fff;
  border-radius: 20rpx;
}
.hot-essay{
  font-weight: bold;
  line-height:80rpx;
  font-size: 36rpx;
  padding: 10rpx 0 0 40rpx;
}
.content-mode{
  border-bottom: 1px solid #e0e0e0;
}
.content-title_pic{
  padding: 10rpx  0 0 40rpx;
}
.content-title_pic image{
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  box-shadow: 0 6rpx 16rpx rgba(25,118,210,0.4);
}
.content-title{
  display: flex;
  margin-top: 40rpx;
}
.content-title_xinxi{
  flex:1;
  position: relative;
}
.xinxi-name{
  display: block;
  position: absolute;
  top: 15rpx;
  left:30rpx;
  font-size: 30rpx;
  font-weight: bold;
}
.xinxi-time{
  position: absolute;
  top: 70rpx;
  left:30rpx;
  opacity: 0.5;
  font-size: 24rpx;
}
.content-text{
  padding: 40rpx 40rpx 20rpx 40rpx;
  opacity: 0.5;
}
.community{
  display: flex;
  height: 100rpx;
  padding: 40rpx;
  position: relative;
}
.community image{
  width: 50rpx;
  height: 50rpx;
}
.community-thumbs_up{
  position: absolute;
  left: 100rpx;
}
.community-comment{
  position: absolute;
  left: 340rpx;
}
.community-collect{
  position: absolute;
  right: 100rpx;
}
.contentTitle{
  padding: 40rpx 40rpx 0 40rpx;
  font-size: 40rpx;
  font-family:Monospace;
}